root = true

# 全てのファイルに適用される設定
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
# ファイルの最終行に改行を挿入する
insert_final_newline = true
# 行末の空白をトリムする
trim_trailing_whitespace = true

# マークダウンファイルに適用される設定
[*.md]
# インデントサイズを4に変更する
indent_size = 4
# 行末の空白をトリムしないように設定する
trim_trailing_whitespace = false
